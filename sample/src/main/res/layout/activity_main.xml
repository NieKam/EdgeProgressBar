<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:id="@+id/root_layout"
    >

  <com.niekam.edgeprogressbar.EdgeProgress
      android:id="@+id/edgeProgress"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:first_color="@color/primary_progress_color"
      app:second_color="@color/secondary_progress_color"
      app:indeterminate="true"
      app:line_width="6dp"
      app:progress_anim_duration="300"
      app:indeterminate_type="zigzag"
      />

  <TextView
      android:id="@+id/section_title_style"
      android:text="Style"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_margin="@dimen/default_margin"
      style="@style/Text.Section"
      />

  <Switch
      android:id="@+id/indeterminate_switch"
      android:text="Indeterminate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/section_title_style"
      style="@style/Text.Label"
      />

  <TextView
      android:id="@+id/stroke_width_label"
      android:text="Line width"
      app:layout_constraintTop_toBottomOf="@id/indeterminate_switch"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_margin="@dimen/default_margin"
      style="@style/Text.Label"
      />

  <SeekBar
      android:id="@+id/stroke_width_seekbar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin"
      app:layout_constraintStart_toEndOf="@id/stroke_width_label"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/stroke_width_label"
      app:layout_constraintBottom_toBottomOf="@id/stroke_width_label"
      android:max="30"
      />


  <TextView
      android:id="@+id/section_title_colors"
      android:text="Colors"
      app:layout_constraintTop_toBottomOf="@id/stroke_width_seekbar"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="@dimen/margin_large"
      android:layout_marginStart="@dimen/default_margin"
      android:layout_marginBottom="@dimen/default_margin"
      style="@style/Text.Section"
      />

  <TextView
      android:id="@+id/color_primary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/primary_progress_color"
      android:text="Primary Color"
      android:layout_margin="@dimen/default_margin"
      app:layout_constraintTop_toBottomOf="@id/section_title_colors"
      app:layout_constraintStart_toStartOf="parent"
      android:padding="@dimen/small_margin"
      style="@style/Text.Label"
      />

  <TextView
      android:id="@+id/color_secondary"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/secondary_progress_color"
      android:text="Secondary Color"
      android:layout_margin="@dimen/default_margin"
      app:layout_constraintTop_toBottomOf="@id/section_title_colors"
      app:layout_constraintEnd_toEndOf="parent"
      android:padding="@dimen/small_margin"
      style="@style/Text.Label"
      />

  <TextView
      android:id="@+id/section_title_progress"
      android:text="Progress"
      app:layout_constraintTop_toBottomOf="@id/color_primary"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="@dimen/margin_large"
      android:layout_marginStart="@dimen/default_margin"
      android:layout_marginBottom="@dimen/default_margin"
      style="@style/Text.Section"
      />

  <TextView
      android:id="@+id/progress_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/section_title_progress"
      style="@style/Text.Label"
      />

  <SeekBar
      android:id="@+id/progress_seekbar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/default_margin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/progress_text"
      android:progress="0"
      />

  <Switch
      android:id="@+id/animation_switch"
      android:text="With animations"
      android:layout_margin="@dimen/default_margin"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/progress_seekbar"
      style="@style/Text.Label"
      />

  <Spinner
      android:id="@+id/effet_type_spinner"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/color_primary"
      android:layout_marginTop="@dimen/margin_large"
      android:layout_marginStart="@dimen/default_margin"
      android:layout_marginBottom="@dimen/default_margin"
      />

</android.support.constraint.ConstraintLayout>